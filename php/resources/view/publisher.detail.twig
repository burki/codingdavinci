{% import 'helper.twig' as helper %}
{% extends 'layout.html.twig' %}

{% block content %}
    <div itemscope itemtype="http://schema.org/Organization">
    <h1 itemprop="name">{{ entry.__get('preferredName') }}</h1>

    <dl>
    {% if entry.__get('dateOfEstablishment') is not empty or entry.__get('dateOfTermination') is not empty%}
        <dt>Zeit:</dt>
        <dd>
            {{ entry.__get('dateOfEstablishment')|dateincomplete }}
            -
            {{ entry.__get('dateOfTermination')|dateincomplete }}
        </dd>
    {% endif %}
    </dl>

    <p itemprop="description">{{ entry.__get('biographicalOrHistoricalInformation') }}</p>
    </div>

    {% if entry.__get('publications')|length > 0 %}
        <h2 style="clear: left">ZugehÃ¶rige Publikation{% if entry.__get('publications')|length > 1 %}en{% endif %}</h2>
        <ul class="listing">
        {% for publication in entry.__get('publications') %}
            <li{% if publication.__get('completeWorks') %} class="minus"{% endif %}>{{  helper.publication_short(publication) }}</li>
        {% endfor %}
        </ul>
    {% endif %}

    {% if gnd is defined and gnd is not empty %}
    <h2>Externe Angebote</h2>
    <p>Gemeinsame Normdatei: <a href="{{ entry.__get('gnd') }}" target="_blank">{{ gnd }}</a>.
    <div title="{{ gnd }}" class="pndaks seealso-ul"></div>
    {% endif %}

{% endblock %}