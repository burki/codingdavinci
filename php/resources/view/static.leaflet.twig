{% import 'helper.twig' as helper %}
{% extends 'layout.html.twig' %}

{% block head %}
    <link rel="stylesheet" href="{{ app.request.basepath }}/js/leaflet/leaflet.css" />
    <script src="{{ app.request.basepath }}/js/leaflet/leaflet.js"></script>
    <!--<script src="{{ app.request.basepath }}/js/data/countriesData.js"></script>-->
    <style type="text/css">
    .info {
        padding: 6px 8px;
        font: 14px/16px Arial, Helvetica, sans-serif;
        background: white;
        background: rgba(255,255,255,0.8);
        box-shadow: 0 0 15px rgba(0,0,0,0.2);
        border-radius: 5px;
    }
    .leaflet-top .leaflet-control.info {
        margin-top: 380px;
    }
    .info h4 {
